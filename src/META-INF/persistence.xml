<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CondominioExpressPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>Modelo.Usuario</class>
    <class>Modelo.Funcionario</class>
    <class>Modelo.Ocorrencia</class>
    <class>Modelo.Condomino</class>
    <class>Modelo.Apartamento</class>
    <class>Modelo.Perfil</class>
    <class>Modelo.Veiculo</class>
    <class>Modelo.Prestadorservico</class>
    <class>Modelo.Bloco</class>
    <class>Modelo.Condominio</class>
    <class>Modelo.Visitante</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/condominioexpress?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
